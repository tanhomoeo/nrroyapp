        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "public_data": {
      // Allow anyone to read data under "public_data"
      ".read": true,
      // Only authenticated users can write to "public_data"
      ".write": "auth != null"
    }
    */
  }
}
