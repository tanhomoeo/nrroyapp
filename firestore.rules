
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: This rule allows anyone to read and write to your entire database.
    // This is useful for development but IS NOT SECURE for production.
    // Before deploying your application to production, you MUST update these
    // rules to properly restrict access.
    //
    // Example for allowing only authenticated users to read/write their own data:
    // match /users/{userId}/{documents=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
    // match /patients/{patientId} {
    //   allow read, write: if request.auth != null; // Example: allow any authenticated user
    // }
    // match /visits/{visitId} {
    //   allow read, write: if request.auth != null;
    // }
    // // Add similar rules for other collections like 'prescriptions', 'paymentSlips', 'settings'
    //
    // For now, using open rules for development:
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
