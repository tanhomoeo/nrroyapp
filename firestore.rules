rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default Deny: By default, deny all reads and writes.
    // This is a good security practice. Specific rules below will grant access.
    match /{document=**} {
      allow read, write: if false;
    }

    // DEVELOPMENT/TESTING RULE: Allows all reads and writes.
    // WARNING: Secure these rules before deploying to a live production environment!
    // To use this, uncomment the block below and comment out or remove the "Default Deny" rule above.
    /*
    match /{document=**} {
      allow read, write: if true;
    }
    */

    // Example of more secure rules (customize as needed for production):
    //
    // // Allow logged-in users to read and write their own data in a 'users' collection
    // match /users/{userId} {
    //   allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    //   allow create: if request.auth != null;
    // }
    //
    // // Public read for 'publicContent', authenticated write
    // match /publicContent/{docId} {
    //   allow read: if true;
    //   allow write: if request.auth != null;
    // }
    //
    // Allow authenticated users to read/write patients, visits, prescriptions, paymentSlips
    // This is a basic example and might need further refinement based on your exact needs
    // (e.g., only specific doctors can write/update certain fields).
    match /patients/{patientId} {
      allow read, write: if request.auth != null;
    }
    match /visits/{visitId} {
      allow read, write: if request.auth != null;
    }
    match /prescriptions/{prescriptionId} {
      allow read, write: if request.auth != null;
    }
    match /paymentSlips/{slipId} {
      allow read, write: if request.auth != null;
    }
    match /settings/clinic {
      allow read: if true; // Clinic settings might be publicly readable
      allow write: if request.auth != null; // Or restrict to specific admin UIDs
    }

    // CURRENTLY ACTIVE RULE FOR DEVELOPMENT (allows all access):
    // Remove or comment out the more specific rules above if you are using this one.
     match /{document=**} {
       allow read, write: if true;
     }
  }
}
